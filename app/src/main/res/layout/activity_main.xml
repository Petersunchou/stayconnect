<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="7"
    android:orientation="horizontal"
    tools:context=".GridXMLActivity" >

    <Button android:id="@+id/notification"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_column="0"
        android:layout_row="0"
        android:text="Notification"
        />

    <Button android:id="@+id/staff_offers"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_column="0"
        android:layout_row="1"
        android:text="Staff Offers"
        />


    <Button android:id="@+id/food_menu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Food Menu"
        />


    <Button android:id="@+id/newsletter"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_column="0"
        android:layout_row="3"
        android:text="Newsletter"
        />


    <Button android:id="@+id/activities"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_column="0"
        android:layout_row="4"
        android:text="Activities"
        />


    <Button android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_column="0"
        android:layout_row="5"
        android:text="Settings"
        />

</GridLayout>